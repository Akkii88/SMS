<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dark_green"/> <!-- Darker Green when Pressed -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@color/green_hacker"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/black"/> <!-- Normal Black Background -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@color/green_hacker"/> <!-- Green Border -->
        </shape>
    </item>
</selector>
