<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light & Dark Mode Compatible Theme -->


    <style name="Theme.SMS.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>


    <style name="Theme.Sms" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background Color -->
        <item name="android:colorBackground">@color/black</item>

        <!-- Text Color -->
        <item name="android:textColorPrimary">@color/green_hacker</item>

        <!-- Status Bar & Navigation Bar Color -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Customize Primary Colors -->
        <item name="colorPrimary">@color/green_hacker</item>
        <item name="colorPrimaryVariant">@color/soft_red</item>
        <item name="colorOnPrimary">@color/black</item>

    </style>
</resources>
