<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- ðŸ”¹ Glowing welcome text -->


    <!-- ðŸ”¹ Unique ID input -->

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/mono"
        android:text="Welcome, Agent..."
        android:textColor="@color/green_hacker"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMiddle" />

    <ImageView
        android:id="@+id/imageViewMiddle"
        android:layout_width="410dp"
        android:layout_height="200dp"
        android:layout_below="@id/textViewWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:contentDescription="logo"
        android:src="@drawable/rr"
        app:layout_constraintBottom_toTopOf="@+id/logcatTopFade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016" />

    <EditText
        android:id="@+id/editTextUniqueID"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edittext_highlight"
        android:hint="Enter your access code"
        android:textColorHint="@color/soft_red"
        android:textColor="@color/green_hacker"
        android:inputType="text"
        android:textSize="13sp"
        android:fontFamily="monospace"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¹ Join Chat button -->
    <Button
        android:id="@+id/buttonJoinChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_highlight"
        android:text="Enter Chatroom"
        android:textColor="@color/green_hacker"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@id/editTextUniqueID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- ðŸ”¹ Top fade overlay for smooth logcat blending -->
    <View
        android:id="@+id/logcatTopFade"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/fade_top"
        app:layout_constraintBottom_toTopOf="@id/logScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¹ Fake Logcat Terminal -->
    <ScrollView
        android:id="@+id/logScrollView"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_margin="12dp"
        android:background="@android:color/transparent"
        android:overScrollMode="never"
        android:fadeScrollbars="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewLogcat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Initializing system...\n"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textColor="@color/green_hacker"
            android:lineSpacingExtra="4dp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
